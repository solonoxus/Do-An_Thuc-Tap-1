<script>
	$(document).ready(function(){
		// HÃ m tÃ­nh tá»ng tiá»n cÃ¡c sáº£n pháº©m ÄÆ°á»£c chá»n
		function calculateSelectedTotal() {
			let total = 0;
			$('.product-checkbox:checked').each(function() {
				const price = parseFloat($(this).data('price')) || 0;
				const quantity = parseInt($(this).closest('tr').find('.num-product').val()) || 0;
				total += price * quantity;
			});
			return total;
		}

		// Cáº­p nháº­t tá»ng tiá»n vÃ  hiá»n thá»
		function updateTotalDisplay() {
			const total = calculateSelectedTotal();
			$('.cart-total-price').text('$' + total.toFixed(2));
			
			// Cáº­p nháº­t danh sÃ¡ch sáº£n pháº©m ÄÆ°á»£c chá»n
			const selectedProducts = [];
			$('.product-checkbox:checked').each(function() {
				const productId = $(this).val(); // Sá»­ dá»¥ng val() thay vÃ¬ data('id')
				if (productId) {
					selectedProducts.push(productId);
				}
			});
			$('#selected-products').val(JSON.stringify(selectedProducts));

			// Cáº­p nháº­t sá» lÆ°á»£ng sáº£n pháº©m ÄÆ°á»£c chá»n
			const selectedCount = selectedProducts.length;
			$('.selected-items-count').text(selectedCount + ' sáº£n pháº©m ÄÆ°á»£c chá»n');

			// Hiá»n thá»/áº©n pháº§n thanh toÃ¡n
			if(selectedProducts.length > 0) {
				$('.checkout-section').addClass('active');
			} else {
				$('.checkout-section').removeClass('active');
			}
		}

		// HÃ m cáº­p nháº­t sá» lÆ°á»£ng sáº£n pháº©m
		function updateQuantity(productId, quantity, maxQuantity) {
			// Kiá»m tra sá» lÆ°á»£ng tá»n kho
			if (quantity > maxQuantity) {
				alert('Sá» lÆ°á»£ng vÆ°á»£t quÃ¡ tá»n kho! Tá»i Äa: ' + maxQuantity);
				return false;
			}

			$.ajax({
				url: '/updatecart',
				method: 'POST',
				data: {
					productId: productId,
					productQuantity: quantity
				},
				success: function(response) {
					if (response.success) {
						// Cáº­p nháº­t giÃ¡ tiá»n cá»§a sáº£n pháº©m
						const price = parseFloat($('#price-' + productId).data('price'));
						const newTotal = price * quantity;
						$('#total-' + productId).text('$' + newTotal.toFixed(2));
						
						// Cáº­p nháº­t tá»ng tiá»n
						updateTotalDisplay();
					} else {
						window.location.reload();
					}
				},
			
			});
		}

		// Xá»­ lÃ½ khi thay Äá»i checkbox
		$('.product-checkbox').change(function() {
			updateTotalDisplay();
		});

		// Xá»­ lÃ½ khi nháº­p trá»±c tiáº¿p sá» lÆ°á»£ng
		$('.num-product').change(function() {
			const val = Math.max(1, parseInt($(this).val()) || 1);
			const maxQuantity = parseInt($(this).data('max-quantity')) || 0;
			if (maxQuantity > 0 && val > maxQuantity) {
				$(this).val(maxQuantity);
			} else {
				$(this).val(val);
			}
			updateTotalDisplay();
			
			// Cáº­p nháº­t tá»ng tiá»n cá»§a sáº£n pháº©m
			const row = $(this).closest('tr');
			const price = parseFloat(row.find('.num-price').text().replace('$', '')) || 0;
			row.find('.total-prod').text('$' + (price * val).toFixed(2));
		});

		// Xá»­ lÃ½ khi thay Äá»i sá» lÆ°á»£ng
		$('.btn-num-product-up, .btn-num-product-down').off('click').on('click', function() {
			const input = $(this).siblings('.num-product');
			let newVal;
			if ($(this).hasClass('btn-num-product-up')) {
				newVal = parseInt(input.val()) + 1;
				const maxQuantity = parseInt(input.data('max-quantity')) || 0;
				if (maxQuantity > 0 && newVal > maxQuantity) {
					newVal = maxQuantity;
				}
			} else {
				newVal = Math.max(1, parseInt(input.val()) - 1);
			}
			input.val(newVal);
			
			// Gá»i AJAX Äá» cáº­p nháº­t sá» lÆ°á»£ng
			const productId = input.siblings('input[name="productId"]').val();
			updateQuantity(productId, newVal, parseInt(input.data('max-quantity')));
			
			// Cáº­p nháº­t tá»ng tiá»n cá»§a sáº£n pháº©m
			const row = $(this).closest('tr');
			const price = parseFloat(row.find('.num-price').text().replace('$', '')) || 0;
			row.find('.total-prod').text('$' + (price * newVal).toFixed(2));
		});

		// Xá»­ lÃ½ form checkout
		let isSubmitting = false;
		$('#checkout-form').on('submit', async function(e) {
			e.preventDefault();
			
			if (isSubmitting) {
				return;
			}
			
			const selectedProducts = [];
			$('.product-checkbox:checked').each(function() {
				selectedProducts.push($(this).val());
			});
			
			if (selectedProducts.length === 0) {
				alert('Vui lÃ²ng chá»n Ã­t nháº¥t má»t sáº£n pháº©m Äá» thanh toÃ¡n');
				return;
			}
			
			$('#selected-products').val(JSON.stringify(selectedProducts));
			
			// Disable form submission
			isSubmitting = true;
			const submitButton = $('#checkout-button');
			submitButton.prop('disabled', true);
			submitButton.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Äang xá»­ lÃ½...');
			submitButton.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> ThÃ nh CÃ´ng !');
			
			const formData = $(this).serialize();
			const paymentMethod = $('#paymentMethod').val();

			try {
				if (paymentMethod === 'vnpay') {
					// Náº¿u lÃ  thanh toÃ¡n VNPay, submit form trá»±c tiáº¿p
					const form = document.createElement('form');
					form.method = 'POST';
					form.action = '/create_payment_url';

					// ThÃªm dá»¯ liá»u form vÃ o
					const formDataObj = new URLSearchParams(formData);
					for (const [key, value] of formDataObj.entries()) {
						const input = document.createElement('input');
						input.type = 'hidden';
						input.name = key;
						input.value = value;
						form.appendChild(input);
					}

					document.body.appendChild(form);
					form.submit();
				} else {
					// Náº¿u lÃ  COD, xá»­ lÃ½ bÃ¬nh thÆ°á»ng
					const response = await $.ajax({
						url: '/cart/checkout',
						method: 'POST',
						data: formData
					});

					if (response.success) {
						$('.product-checkbox:checked').closest('tr').remove();
						calculateSelectedTotal();
						updateCartCount();
						
						// Show success modal instead of alert
						$('#orderCodeDisplay').text(response.orderCode);
						$('#successCheckoutModal').modal('show');
						
						// Optional: Reload page after a delay
						setTimeout(() => window.location.reload(), 3000);
					}
				}
			} catch (error) {
				console.error('Error:', error);
			} finally {
				if (paymentMethod !== 'vnpay') {
					setTimeout(() => {
						isSubmitting = false;
						submitButton.prop('disabled', false);
						submitButton.html('Proceed to Checkout');
					}, 5000);
				}
			}
		});

		// Khá»i táº¡o hiá»n thá»
		updateTotalDisplay();
	});
</script>