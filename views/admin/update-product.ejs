<%- include('../includes/head.ejs') %>
<%- include('./header-admin.ejs') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Cập nhật sản phẩm</h3>
                    <div class="card-tools">
                        <a href="/adminTin" class="btn btn-primary">
                            <i class="fa fa-home"></i> Quay về Bảng điều khiển
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/adminTin/managerproducts/update" method="POST">
                        <input type="hidden" name="_id" value="<%= airpods._id %>">
                        
                        <div class="form-group">
                            <label for="productname">Tên sản phẩm:</label>
                            <input type="text" class="form-control" id="productname" name="productname" 
                                   value="<%= airpods.productname %>" required>
                        </div>

                        <div class="form-group">
                            <label for="price">Giá:</label>
                            <input type="text" class="form-control" id="price" name="price" 
                                   value="<%= airpods.price %>" required>
                        </div>

                        <div class="form-group">
                            <label for="description">Mô tả:</label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="3" required><%= airpods.description %></textarea>
                        </div>

                        <div class="form-group">
                            <label for="category">Danh mục:</label>
                            <select class="form-control" id="category" name="category" required>
                                <% ['iphone', 'macbook', 'applewatch', 'airpod'].forEach(function(cat) { %>
                                    <option value="<%= cat %>" 
                                            <%= airpods.category === cat ? 'selected' : '' %>>
                                        <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="quantity">Số lượng:</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" 
                                   value="<%= airpods.quantity %>" required>
                        </div>

                        <div class="form-group">
                            <label for="imagePath">Đường dẫn hình ảnh:</label>
                            <input type="text" class="form-control" id="imagePath" name="imagePath" 
                                   value="<%= airpods.imagePath %>" required>
                            <small class="form-text text-muted">Nhập URL của hình ảnh</small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                            <a href="/adminTin/managerproducts" class="btn btn-secondary ml-2">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../includes/end.ejs') %>